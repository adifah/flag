div(data-role='page')
    div(data-role='header')
        h1 Flag-Zig-Zag
    div(data-role='content')
        - if (!everyauth.loggedIn)
            h2 Not Authenticated
            #twitter-login
                a(href='/auth/twitter', style='border: 0px', rel='external')
                    img(style='border: 0px', src='https://si0.twimg.com/images/dev/buttons/sign-in-with-twitter-l.png')
        - else
            h2 Authenticated
            - if (everyauth.twitter)
                p Hello <b>#{everyauth.twitter.user.name}</b> (#{everyauth.twitter.user.screen_name})
                // p= JSON.stringify(everyauth.twitter.user)
            h3 
                a(href='/logout') Logout